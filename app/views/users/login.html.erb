<% content_for :body_class, "login-box" %>

<% content_for :before_scripts do %>
  <link rel="stylesheet" href="../../plugins/iCheck/square/blue.css">
<% end %>

<div class="login-box">
  <div class="login-logo">
    <a href="/">Atlas</a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to continue</p>
    <form action="/" method="GET">
      <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember Me
            </label>
          </div>
        </div><!-- /.col -->
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </div><!-- /.col -->
      </div>
    </form>

    <div class="social-auth-links text-center">
      <p class="text-muted">- OR -</p>
      <a href="#" class="btn btn-block btn-social btn-facebook"><i class="fa fa-facebook"></i> Sign in using Facebook</a>
      <a href="#" class="btn btn-block btn-social btn-google"><i class="fa fa-google-plus"></i> Sign in using Google+</a>
    </div><!-- /.social-auth-links -->

    <div class="login-box-footer text-center">
      <a href="#">Forgot password?</a><br>
      <%= link_to "Register for a new account &rarr;".html_safe, signup_path, class: "text-center" %>
    </div>

  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->


<% content_for :after_scripts do %>
  <script src="/plugins/jQuery/jQuery-2.1.4.min.js"></script>
  <script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
  <script src="/plugins/iCheck/icheck.min.js"></script>
  <script src="/assets/pages/login.js"></script>
<% end %>
